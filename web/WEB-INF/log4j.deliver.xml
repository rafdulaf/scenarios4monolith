    <!-- <category name="org.ametys.core.trace.ForensicLogger" additivity="false">
        <priority value="info"/>
        <appender-ref ref="forensic"/>
    </category> -->
    
    <category additivity="false" name="org.ametys.core.migration">
        <priority value="info"/>
        <appender-ref ref="migration"/>
    </category>
    
    <category additivity="false" name="org.ametys.plugins.deploystarter.Init">
        <priority value="info"/>
        <appender-ref ref="start-actions"/>
    </category>
    
    <root>
        <priority value="error"/>
        <appender-ref ref="servlet"/>
    </root>
</log4j:configuration>