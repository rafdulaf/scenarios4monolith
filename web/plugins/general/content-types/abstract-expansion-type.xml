<extension class="org.ametys.cms.contenttype.DefaultContentType">
    <content-type extends="org.ametys.cms.ArchivedContent" abstract="true">
        <label i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_TYPE_LABEL</label>
        <description i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_TYPE_DESC</description>
        
        <icons>
            <glyph>ametysicon-puzzle-piece1</glyph>
        </icons>
        
        <tags>
            <tag>reference-table</tag>
            <tag>global</tag>
        </tags>
        
        <attribute name="title" type="multilingual-string">
            <label i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_TYPE_NAME</label>
            <description i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_TYPE_NAME_DESC</description>
            <validation>
                <mandatory />
            </validation>
        </attribute>

        <attribute name="identifier" type="string">
            <label i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_TYPE_ID</label>
            <description i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_TYPE_ID_DESC</description>
            <validation>
                <mandatory />
            </validation>
        </attribute>

        <attribute name="scc_identifier" type="string">
            <label i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_TYPE_SCC_ID</label>
            <description i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_TYPE_SCC_ID_DESC</description>
            <validation>
                <mandatory />
            </validation>
        </attribute>

        <attribute name="column" type="string">
            <label i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_TYPE_COLUMN</label>
            <description i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_TYPE_COLUMN_DESC</description>
            <validation>
                <mandatory />
            </validation>
        </attribute>

        <view name="main" override="true">
            <item ref="title" order-before="archived" />
            <item ref="scc_identifier" order-before="archived" />
            <item ref="identifier" order-before="archived" />
            <item ref="column" order-before="archived" />
        </view>
        
        <view name="default-edition" override="true">
            <item ref="title" order-before="archived" />
        </view>
        
        <view name="details" override="true">
            <item ref="title" order-before="archived" />
        </view>
        
        <view name="index" override="true">
            <item ref="title" order-before="archived" />
        </view>        
    </content-type>
</extension>
        
