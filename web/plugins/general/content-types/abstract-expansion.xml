<extension class="org.ametys.cms.contenttype.DefaultContentType">
    <content-type extends="org.ametys.cms.ArchivedContent" abstract="true">
        <label i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_LABEL</label>
        <description i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_DESC</description>
        
        <icons>
            <glyph>ametysicon-puzzle-piece1</glyph>
        </icons>
        
        <tags>
            <tag>reference-table</tag>
            <tag>global</tag>
        </tags>
        
        <attribute name="title" type="multilingual-string">
            <label i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_NAME</label>
            <description i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_NAME_DESC</description>
            <validation>
                <mandatory />
            </validation>
        </attribute>

        <attribute name="short" type="multilingual-string">
            <label i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_SHORT</label>
            <description i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_SHORT_DESC</description>
            <validation>
                <mandatory />
            </validation>
        </attribute>

        <attribute name="identifier" type="string">
            <label i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_ID</label>
            <description i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_ID_DESC</description>
            <validation>
                <mandatory />
            </validation>
        </attribute>

        <attribute name="scc_identifier" type="string">
            <label i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_SCC_ID</label>
            <description i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_SCC_ID_DESC</description>
            <validation>
                <mandatory />
            </validation>
        </attribute>

        <attribute name="type" type="content" contentType="abstract-expansion-type">
            <label i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_TYPE</label>
            <description i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_TYPE_DESC</description>
            <validation>
                <mandatory />
            </validation>
            <widget>edition.select-referencetable-content</widget>
        </attribute>

        <attribute name="mandatory" type="boolean">
            <label i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_MANDATORY</label>
            <description i18n="true">CONTENT_TYPES_ABSTRACT_EXPANSION_MANDATORY_DESC</description>
            <default>false</default>
            <widget>edition.select-referencetable-content</widget>
        </attribute>

        <view name="main" override="true">
            <item ref="title" order-before="archived" />
            <item ref="short" order-before="archived" />
            <item ref="scc_identifier" order-before="archived" />
            <item ref="identifier" order-before="archived" />
            <item ref="type" order-before="archived" />
            <item ref="mandatory" order-before="archived" />
        </view>
        
        <view name="default-edition" override="true">
            <item ref="title" order-before="archived" />
        </view>
        
        <view name="details" override="true">
            <item ref="title" order-before="archived" />
        </view>
        
        <view name="index" override="true">
            <item ref="title" order-before="archived" />
        </view>        
    </content-type>
</extension>
        
