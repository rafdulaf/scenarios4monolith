<extension class="org.ametys.cms.contenttype.DefaultContentType">
    <content-type extends="org.ametys.cms.ArchivedContent">
        <label i18n="true">CONTENT_TYPES_CONAN_SPELL_LABEL</label>
        <description i18n="true">CONTENT_TYPES_CONAN_SPELL_DESC</description>
        <default-title i18n="true">CONTENT_TYPES_CONAN_SPELL_NEW</default-title>
        
        <right>Right_ContentType_Conan_Spell_Create</right>

        <icons>
            <glyph>ametysicon-sparkles</glyph>
        </icons>
        
        <tags>
            <tag>reference-table</tag>
            <tag>global</tag>
        </tags>
        
        <attribute name="title" type="multilingual-string">
            <label i18n="true">CONTENT_TYPES_CONAN_SPELL_NAME</label>
            <description i18n="true">CONTENT_TYPES_CONAN_SPELL_NAME_DESC</description>
            <validation>
                <mandatory />
            </validation>
        </attribute>

        <attribute name="identifier" type="string">
            <label i18n="true">CONTENT_TYPES_CONAN_SPELL_ID</label>
            <description i18n="true">CONTENT_TYPES_CONAN_SPELL_ID_DESC</description>
            <validation>
                <mandatory />
            </validation>
        </attribute>

        <attribute name="image" type="file">
            <label i18n="true">CONTENT_TYPES_CONAN_SPELL_IMAGE</label>
            <description i18n="true">CONTENT_TYPES_CONAN_SPELL_IMAGE_DESC</description>
            <validation>
                <mandatory />
            </validation>
            <widget-params>
                <param name="filter">image</param>
                <param name="allowSources">external</param>
            </widget-params>
        </attribute>
        
        <attribute name="composition" type="content" multiple="true" contentType="conan-boards">
            <label i18n="true">CONTENT_TYPES_CONAN_BOARDS_COMPOSITION</label>
            <description i18n="true">CONTENT_TYPES_CONAN_BOARDS_COMPOSITION_DESC</description>
            <widget>edition.select-referencetable-content</widget>
        </attribute>
        
        <view name="main" override="true">
            <item ref="title" order-before="archived" />
            <item ref="identifier" order-before="archived" />
            <item ref="image" order-before="archived" />
            <item ref="composition" order-before="archived" />
        </view>
        
        <view name="default-edition" override="true">
            <item ref="title" order-before="archived" />
        </view>
        
        <view name="details" override="true">
            <item ref="title" order-before="archived" />
        </view>
        
        <view name="index" override="true">
            <item ref="title" order-before="archived" />
        </view>        
    </content-type>
</extension>
        
