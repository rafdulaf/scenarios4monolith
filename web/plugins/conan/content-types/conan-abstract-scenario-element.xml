<extension class="org.ametys.cms.contenttype.DefaultContentType">
    <content-type abstract="true" extends="org.ametys.cms.ArchivedContent">
        <label i18n="true">CONTENT_TYPES_CONAN_ABSTRACT_SCENARIO_ELEMENT_LABEL</label>
        <description i18n="true">CONTENT_TYPES_CONAN_ABSTRACT_SCENARIO_ELEMENT_DESC</description>
        
        <icons>
            <glyph>ametysicon-categories</glyph>
        </icons>
        
        <tags>
            <tag>reference-table</tag>
            <tag>global</tag>
        </tags>
        
        <attribute name="title" type="multilingual-string">
            <label i18n="true">CONTENT_TYPES_CONAN_ABSTRACT_SCENARIO_NAME</label>
            <description i18n="true">CONTENT_TYPES_CONAN_ABSTRACT_SCENARIO_NAME_DESC</description>
            <validation>
                <mandatory />
            </validation>
        </attribute>  
        
        <attribute name="identifier" type="string">
            <label i18n="true">CONTENT_TYPES_CONAN_ABSTRACT_SCENARIO_ID</label>
            <description i18n="true">CONTENT_TYPES_CONAN_ABSTRACT_SCENARIO_ID_DESC</description>
            <validation>
                <mandatory />
            </validation>
        </attribute>
        
        <attribute name="scc_identifier" type="string">
            <label i18n="true">CONTENT_TYPES_CONAN_ABSTRACT_SCENARIO_SCC_ID</label>
            <description i18n="true">CONTENT_TYPES_CONAN_ABSTRACT_SCENARIO_SCC_ID_DESC</description>
            <validation>
                <mandatory />
            </validation>
        </attribute>
        
        <attribute name="origins" type="content" multiple="true" contentType="conan-expansion">
            <label i18n="true">CONTENT_TYPES_CONAN_ABSTRACT_SCENARIO_ORIGINS</label>
            <description i18n="true">CONTENT_TYPES_CONAN_ABSTRACT_SCENARIO_ORIGINS_DESC</description>
            <validation>
                <mandatory />
            </validation>
           <widget>edition.select-referencetable-content</widget>
        </attribute>
        
        
        <attribute name="image" type="string">
            <label i18n="true">CONTENT_TYPES_CONAN_ABSTRACT_SCENARIO_IMAGE</label>
            <description i18n="true">CONTENT_TYPES_CONAN_ABSTRACT_SCENARIO_IMAGE_DESC</description>
        </attribute>  
        <attribute name="image2" type="string">
            <label i18n="true">CONTENT_TYPES_CONAN_ABSTRACT_SCENARIO_IMAGE2</label>
            <description i18n="true">CONTENT_TYPES_CONAN_ABSTRACT_SCENARIO_IMAGE2_DESC</description>
        </attribute>  
        
        <view name="main" override="true">
            <item ref="title" order-before="archived" />
            <item ref="image" order-after="title" />
            <item ref="image2" order-after="image" />
            <item ref="identifier" order-after="image2" />
            <item ref="scc_identifier" order-after="identifier" />
            <item ref="origins" order-after="scc_identifier" />
        </view>      
        
        <view name="default-edition" override="true">
            <item ref="title" order-before="archived" />
        </view>
        
        <view name="details" override="true">
            <item ref="title" order-before="archived" />
        </view>
        
        <view name="index" override="true">
            <item ref="title" order-before="archived" />
        </view>          
    </content-type>
</extension>